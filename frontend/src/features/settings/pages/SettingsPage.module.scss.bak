@import '../../../styles/_variables';
@import '../../../styles/_mixins';

.pageContent {
    position: relative;
    padding-top: calc(var(--banner-height, 0px) + var(--toolbar-height, 72px) + 24px);
    /* Banner + toolbar + gap */
    min-height: 100vh;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    padding-inline: 24px;
    padding-bottom: 24px;
    box-sizing: border-box;
    text-align: start;
}

.loading,
.loadError {
    @include flex-center;
    padding: 3rem;
    color: $text-muted;
    font-size: 16px;
}

.section {
    @include card-base;
    background-color: $background-secondary;
    border: 1px solid $border-primary;
    margin-bottom: 2rem;
}

.sectionHeader {
    @include section-header;
    margin-top: 0;
    margin-bottom: 1rem;
    text-align: start;
}

[dir="rtl"] .sectionHeader {
    text-align: right;
    direction: rtl;
}

.sectionTitle {
    color: $text-primary;
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
    text-align: start;
}

[dir="rtl"] .sectionTitle {
    text-align: right;
    direction: rtl;
}

.editButton {
    font-size: 0.9rem !important;
    padding: 0.25rem 0.75rem !important;
}


.field {
    @include form-field;
}

.field label {
    @include form-label;
    color: $text-muted;
}

.field p {
    margin: 0;
    font-size: 1.1em;
}

.colorSwatchContainer {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
}

.colorSwatch {
    width: 32px;
    height: 32px;
    @include rounded-circle;
    @include interactive-button;
    @include smooth-transition;
    border: 2px solid transparent;
}

.colorSwatch:hover {
    transform: scale(1.1);
}

.colorSwatch.active {
    border-color: $accent-lavender;
    transform: scale(1.1);
}

.fontButtonGroup {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.5rem;
}

.buttonGroup {
    @include button-group;
    margin-top: 1rem;
    gap: 0.5rem;
}

.dangerZone {
    border-color: $overlay-danger-40;
    box-shadow: 0 0 8px $overlay-danger-10;
}

.required {
    color: $error-color;
    font-weight: bold;
}

.radioGroup {
    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
}

.radioLabel {
    @include radio-option;
    color: $text-muted;
    font-size: 0.875rem;
}

.radioLabel input[type="radio"] {
    @include radio-input;
    margin: 0;
    accent-color: $primary;
}

.dateInput {
    @include input-base;
    background-color: $background-secondary;
    border: 1px solid $border-secondary;
    color: $text-primary;
    font-size: 1rem;
    margin-top: 4px;
    @include smooth-transition;
}

.dateInput:focus {
    outline: none;
    border-color: $primary;
    @include focus-shadow;
}

.dateInput::-webkit-calendar-picker-indicator {
    cursor: pointer;
    filter: invert(1);
    opacity: 0.7;
    @include smooth-transition;
}

.dateInput::-webkit-calendar-picker-indicator:hover {
    opacity: 1;
}