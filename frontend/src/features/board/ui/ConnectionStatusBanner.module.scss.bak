@import '../../../styles/_variables';
@import '../../../styles/_mixins';

.banner {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  @include flex-center;
  padding: 0.75rem 1rem;
  border-bottom: 1px solid;
  backdrop-filter: blur(10px);
  @include smooth-transition;
}

.content {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
  font-weight: 500;
  max-width: 600px;
  text-align: center;
}

.icon {
  font-size: 1rem;
  line-height: 1;
  flex-shrink: 0;
}

.message {
  line-height: 1.25;
  flex: 1;
}

.connecting {
  background-color: $warning-bg;
  color: $warning-text;
  border-color: $warning-border;
}

.connecting .icon {
  animation: spin 2s linear infinite;
}

.disconnected {
  background-color: $error-bg;
  color: $text-primary;
  border-color: $error-border;
}

.disconnected .icon {
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

@keyframes pulse {
  0% {
    opacity: 1;
  }

  50% {
    opacity: 0.7;
  }

  100% {
    opacity: 1;
  }
}

@media (max-width: 768px) {
  .banner {
    padding: 0.5rem;
  }

  .content {
    font-size: 0.8125rem;
    gap: 0.375rem;
  }

  .message {
    font-size: 0.8125rem;
  }
}