@import '../../../styles/_variables';
@import '../../../styles/_mixins';

.container {
  display: flex;
  height: 100%;
  width: 100%;
}

.leftPanel,
.rightPanel {
  overflow: auto;
  min-width: 200px;
}

.leftPanel {
  border: 2px solid var(--border-color);
  @include rounded-medium;
  background: $background-secondary;
  flex-shrink: 0;
}

.rightPanel {
  border: 2px solid var(--border-color);
  @include rounded-medium;
  background: $background-secondary;
  @include flex-column;
}

.divider {
  width: 12px;
  cursor: col-resize;
  @include flex-center;
  background: $divider-bg;
  border: none;
  padding: 0;
  @include hover-transition;
  position: relative;
  margin: 0 4px;
  height: 100%;
}

.divider:hover {
  background: $divider-hover;
}

.divider.dragging {
  background: $divider-active;
}

.dividerHandle {
  @include flex-column;
  @include flex-center;
  gap: 3px;
  height: 50px;
}

.dividerHandle::before,
.dividerHandle::after,
.dividerHandle span {
  content: '';
  width: 3px;
  height: 3px;
  background: $text-placeholder;
  @include rounded-circle;
  @include hover-transition;
}

.divider:hover .dividerHandle::before,
.divider:hover .dividerHandle::after,
.divider:hover .dividerHandle span {
  background: $primary;
}

.divider.dragging .dividerHandle::before,
.divider.dragging .dividerHandle::after,
.divider.dragging .dividerHandle span {
  background: $primary;
}