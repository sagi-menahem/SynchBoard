@import '../../../../styles/_variables';
@import '../../../../styles/_mixins';

.canvasToolSection {
  display: flex;
  gap: 16px;
  align-items: stretch;
  flex-wrap: nowrap;
  overflow: visible;
}

.toolGroup {
  @include flex-column;
  @include flex-center;
  padding: 8px 14px;
  position: relative;
  min-height: 56px;
  @include rounded-medium;
  @include hover-transition;
}

.toolGroup:hover {
  background-color: $tool-hover-bg;
}

.toolGroup:hover .toolLabel {
  color: $text-secondary;
}

.toolGroup:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 32px;
  width: 1px;
  background: linear-gradient(to bottom, transparent, $tool-separator, transparent);
}

.iconButton {
  @include interactive-button;
  background: $tool-button-bg;
  border: 1px solid $tool-button-border;
  color: $tool-button-text;
  cursor: pointer;
  padding: 8px;
  @include rounded-small;
  @include flex-center;
  @include button-transition;
  min-width: 36px;
  min-height: 36px;
  position: relative;
}

.iconButton:hover:not(:disabled) {
  background: $tool-button-hover-bg;
  border-color: $tool-button-hover-border;
  color: $text-primary;
  transform: translateY(-1px);
  @include shadow-light;
}

.iconButton:disabled {
  @include button-disabled;
  opacity: 0.3;
  cursor: not-allowed;
}

.iconButton.active {
  background: linear-gradient(135deg, $primary-light, $primary-lighter);
  color: $text-primary;
  border-color: $primary-border;
  box-shadow: 0 0 12px $primary-shadow;
}

.colorPickerWrapper {
  display: inline-flex;
  align-items: center;
  height: 36px;
}

.colorPickerWrapper :global(.colorPickerContainer) {
  height: 36px;
}

.colorPickerWrapper :global(.swatch) {
  width: 36px;
  height: 36px;
  border: 1px solid $tool-button-border;
  @include shadow-light;
}

.colorPickerWrapper :global(.swatch):hover {
  transform: translateY(-1px);
  @include shadow-medium;
  border-color: $tool-button-hover-border;
}

.strokeControl {
  display: inline-flex;
  align-items: center;
  min-width: 120px;
  height: 36px;
  padding: 0 8px;
  background: $tool-control-bg;
  border: 1px solid $tool-button-border;
  @include rounded-small;
}

.toolLabel {
  font-size: 10px;
  font-weight: 400;
  color: $tool-label-text;
  white-space: nowrap;
  text-transform: uppercase;
  letter-spacing: 0.8px;
  margin-top: 6px;
  @include smooth-transition;
  text-shadow: 0 1px 2px $text-shadow;
}

.toolControls {
  display: flex;
  gap: 6px;
  align-items: center;
  justify-content: center;
}

.shapeDropdown {
  position: relative;
  display: inline-block;
}

.dropdownButton {
  @include interactive-button;
  background: $tool-button-bg;
  border: 1px solid $tool-button-border;
  color: $tool-button-text;
  cursor: pointer;
  padding: 8px 12px;
  @include rounded-small;
  display: flex;
  align-items: center;
  gap: 6px;
  @include button-transition;
}

.dropdownButton:hover {
  background: $tool-button-hover-bg;
  border-color: $tool-button-hover-border;
  color: $text-primary;
  transform: translateY(-1px);
  @include shadow-light;
}

.dropdownButton.active {
  background: linear-gradient(135deg, $primary-light, $primary-lighter);
  color: $text-primary;
  border-color: $primary-border;
  box-shadow: 0 0 12px $primary-shadow;
}

.dropdownContent {
  position: absolute;
  top: 100%;
  left: 0;
  background-color: $dropdown-bg;
  backdrop-filter: blur(10px);
  border: 1px solid $tool-button-border;
  @include rounded-medium;
  @include shadow-heavy;
  min-width: 160px;
  z-index: 200;
  @include flex-column;
  gap: 2px;
  padding: 4px;
  margin-top: 4px;
}

.dropdownContent.hidden {
  display: none;
}

.dropdownItem {
  @include button-base;
  background: none;
  border: none;
  color: $text-disabled;
  cursor: pointer;
  padding: 8px 12px;
  @include rounded-small;
  display: flex;
  align-items: center;
  gap: 8px;
  @include smooth-transition;
  text-align: left;
  font-size: 14px;
}

.dropdownItem:hover {
  background-color: $dropdown-item-hover;
  color: $text-primary;
}

.dropdownItem.active {
  background-color: $dropdown-item-active;
  color: $text-primary;
}

.textInputOverlay {
  position: absolute;
  background-color: $background-secondary;
  border: 1px solid $border-primary;
  @include rounded-medium;
  padding: 12px;
  z-index: 100;
  @include shadow-heavy;
  backdrop-filter: blur(10px);
}

.textInput {
  @include input-base;
  background: none;
  border: none;
  color: $text-primary;
  font-family: system-ui, -apple-system, sans-serif;
  outline: none;
  overflow: auto;
  scrollbar-width: thin;
  scrollbar-color: $scrollbar-thumb $scrollbar-track;
}

.textInput::-webkit-scrollbar {
  width: 6px;
}

.textInput::-webkit-scrollbar-track {
  background: $scrollbar-track;
  @include rounded-small;
}

.textInput::-webkit-scrollbar-thumb {
  background: $scrollbar-thumb;
  @include rounded-small;
}

.textInput::-webkit-scrollbar-thumb:hover {
  background: $scrollbar-thumb-hover;
}