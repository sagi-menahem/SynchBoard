@import '../../../../styles/_variables';
@import '../../../../styles/_mixins';

.scrollContainer {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: auto;
    direction: rtl;
    display: flex;
}

.scrollContainer>* {
    direction: ltr;
}

.canvasContainer {
    @include flex-center;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    position: relative;
    background: var(--canvas-container-bg, $background-primary);
    background-image:
        repeating-linear-gradient(-45deg,
            transparent,
            transparent 10px,
            var(--canvas-pattern-color, $canvas-pattern) 10px,
            var(--canvas-pattern-color, $canvas-pattern) 20px);
}

.canvasContainer.hideBackground {
    background: transparent !important;
    background-image: none !important;
}

.canvasWrapper {
    display: inline-block;
    transform-origin: center center;
    @include shadow-heavy;
    @include rounded-small;
    overflow: hidden;
}

.canvas {
    display: block;
    cursor: crosshair;
    border-radius: 2px;
}

.canvas.disabled {
    cursor: not-allowed !important;
    opacity: 0.6;
    filter: grayscale(0.3);
}

.scrollContainer.disconnected::after {
    content: "Drawing disabled - No connection to server";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: $error-overlay;
    color: $text-primary;
    padding: 12px 20px;
    @include rounded-medium;
    font-size: 14px;
    font-weight: 500;
    pointer-events: none;
    z-index: 10;
    @include shadow-medium;
}

.loadingOverlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: $background-overlay;
    @include flex-center;
    z-index: 10;
}

.placeholderContent {
    @include flex-column;
    @include flex-center;
    gap: 16px;
}

.placeholderSpinner {
    width: 40px;
    height: 40px;
    border: 3px solid $border-primary;
    border-top: 3px solid $primary;
    @include rounded-circle;
    animation: spin 1s linear infinite;
}

.placeholderText {
    color: $text-muted;
    font-size: 14px;
    margin: 0;
    font-weight: 500;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}