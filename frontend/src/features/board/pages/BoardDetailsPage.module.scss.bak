@import '../../../styles/_variables';
@import '../../../styles/_mixins';

.pageContent {
    position: relative;
    padding-top: calc(var(--banner-height, 0px) + var(--toolbar-height, 72px) + 24px);
    /* Banner + toolbar + gap */
    min-height: 100vh;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 24px;
    padding-right: 24px;
    padding-bottom: 24px;
    box-sizing: border-box;
    text-align: left;
}

.loading {
    @include flex-center;
    padding: 3rem;
    color: $text-secondary;
    font-size: 16px;
}

.notFound {
    @include flex-center;
    padding: 3rem;
    color: $text-secondary;
    font-size: 16px;
}

.membersSection {
    margin-top: 2rem;
}

.sectionTitle {
    color: $text-primary;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid $border-light;
}

.membersListContainer {
    list-style: none;
    padding: 0;
    margin: 0;
}

.quickSettingsModal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: $overlay-modal;
    backdrop-filter: blur(4px);
    @include flex-center;
    z-index: 100;
    padding: 2rem;
}

.quickSettingsContent {
    background: linear-gradient(to bottom, $background-secondary, $background-tertiary);
    border: 1px solid $border-light;
    @include rounded-large;
    padding: 2rem;
    max-width: 600px;
    width: 100%;
    max-height: 80vh;
    overflow-y: auto;
    position: relative;
    @include shadow-heavy;
}

.closeQuickSettings {
    @include button-base;
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: $overlay-light;
    border: none;
    color: $text-secondary;
    width: 32px;
    height: 32px;
    @include rounded-circle;
    @include flex-center;
    cursor: pointer;
    font-size: 18px;
    font-weight: bold;
    @include button-transition;
}

.closeQuickSettings:hover {
    background: $overlay-medium;
    color: $text-primary;
    transform: scale(1.1);
}