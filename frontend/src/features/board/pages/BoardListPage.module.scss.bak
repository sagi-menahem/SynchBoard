@import '../../../styles/_variables';
@import '../../../styles/_mixins';

.pageContent {
    position: relative;
    padding-top: calc(var(--banner-height, 0px) + var(--toolbar-height, 72px) + 12px);
    /* Banner + toolbar + reduced gap */
    min-height: 100vh;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 24px;
    padding-right: 24px;
    padding-bottom: 24px;
    box-sizing: border-box;
}

.loading {
    @include flex-center;
    padding: 2rem;
    color: $text-secondary;
    font-size: 16px;
}

.emptyState {
    @include flex-center;
    padding: 4rem 2rem;
    text-align: center;
}

.emptyState p {
    color: $text-secondary;
    font-size: 16px;
    margin: 0;
    max-width: 400px;
    line-height: 1.5;
}

.emptyStateCard {
    @include card-base;
    background: $card-empty-bg;
    border: 1px solid $card-empty-border;
    @include rounded-large;
    padding: 3rem 2.5rem;
    max-width: 420px;
    position: relative;
    @include smooth-transition;
}

.emptyStateCard:hover {
    @include card-hover-effect;
    background: $card-empty-hover-bg;
    border-color: $card-empty-hover-border;
    transform: translateY(-2px);
}

.emptyStateIcon {
    margin-bottom: 1.5rem;
    color: $icon-empty-state;
    @include flex-center;
}

.emptyStateContent {
    @include flex-column;
    gap: 0.75rem;
}

.emptyStateTitle {
    color: $text-primary;
    font-size: 20px;
    font-weight: 600;
    margin: 0;
    letter-spacing: -0.01em;
}

.emptyStateMessage {
    color: $text-secondary-light;
    font-size: 16px;
    line-height: 1.5;
    margin: 0;
}

.boardList {
    display: grid;
    gap: 1.5rem;
    padding: 0.5rem 0;
}

.boardList.grid {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
}

.boardList.list {
    @include flex-column;
    gap: 1rem;
}

.boardListItem {
    animation: boardStaggerIn 0.3s ease-out backwards;
    @include smooth-transition;
}

.boardListItem.noAnimation {
    animation: none;
}

.boardList.list .boardListItem {
    width: 100%;
}

.boardListItem:hover {
    transform: translateY(-2px);
}

.boardList.list .boardListItem:hover {
    transform: translateY(-1px);
}

@keyframes boardStaggerIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}