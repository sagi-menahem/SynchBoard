@import '../../../styles/_variables';
@import '../../../styles/_mixins';

.container {
  @include flex-column;
  height: 100%;
  background: $background-primary;
  background-image:
    repeating-linear-gradient(45deg,
      transparent,
      transparent 10px,
      $overlay-white-02 10px,
      $overlay-white-02 20px);
  color: $text-primary;
  @include rounded-large;
  @include shadow-medium;
  overflow: hidden;
}

.messageList {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 16px;
  @include flex-column;
  gap: 4px;
  scroll-behavior: smooth;
  background: transparent;
  max-width: 100%;
  box-sizing: border-box;
}


.messageList::-webkit-scrollbar {
  width: 6px;
}

.messageList::-webkit-scrollbar-track {
  background: $background-tertiary;
  @include rounded-small;
}

.messageList::-webkit-scrollbar-thumb {
  background: $border-secondary;
  @include rounded-small;
}

.messageList::-webkit-scrollbar-thumb:hover {
  background: $text-secondary-dark;
}

.searchContainer {
  @include flex-start;
  padding: 12px 16px;
  background-color: $background-tertiary !important;
  border-bottom: 1px solid $border-primary;
  gap: 8px;
}

.searchInput {
  flex: 1;
  padding: 8px 12px;
  background-color: $background-primary !important;
  border: 1px solid $border-secondary;
  @include rounded-medium;
  color: $text-primary !important;
  font-size: 0.9rem;
  outline: none;
  @include smooth-transition;
}

.searchInput:focus {
  border-color: $accent-purple;
  box-shadow: 0 0 0 2px $overlay-primary-20;
}

.searchInput::placeholder {
  color: $text-placeholder;
}

.searchCloseButton {
  @include interactive-button;
  padding: 6px 8px;
  color: $text-placeholder;
  @include rounded-small;
  font-size: 1rem;
  @include smooth-transition;
}

.searchCloseButton:hover {
  background-color: $border-primary;
  color: $text-primary;
}

.searchResults {
  font-size: 0.8rem;
  color: $text-placeholder;
  white-space: nowrap;
}

.dateSeparator {
  text-align: center;
  margin: 16px 0;
  color: $text-placeholder !important;
  font-size: 0.85rem;
  font-weight: 500;
  position: relative;
  padding: 0 20px;
  user-select: none;
}

.dateSeparator::before,
.dateSeparator::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 35%;
  height: 1px;
  background: $border-primary;
  opacity: 0.6;
}

.dateSeparator::before {
  left: 0;
}

.dateSeparator::after {
  right: 0;
}

@media (max-width: 768px) {
  .container {
    border-radius: 0;
    box-shadow: none;
  }

  .messageList {
    padding: 12px;
  }

  .dateSeparator {
    margin: 12px 0;
    font-size: 0.8rem;
    padding: 0 15px;
  }

  .dateSeparator::before,
  .dateSeparator::after {
    width: 30%;
  }
}