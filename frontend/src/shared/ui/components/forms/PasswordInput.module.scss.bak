@import '../../../../styles/_variables';
@import '../../../../styles/_mixins';

.passwordContainer {
  position: relative;
  @include flex-start;
  width: 100%;
}

.passwordInput {
  @include input-base;
  padding-block: 10px;
  padding-inline-start: 10px;
  padding-inline-end: 40px;
  margin-top: 4px;
  background-color: $background-secondary;
  border: 1px solid $border-primary;
  @include rounded-small;
  color: $text-primary;
  @include smooth-transition;
  text-align: center;

  @include input-focus;

  &:disabled {
    background-color: $background-darker;
    color: $text-disabled;
    cursor: not-allowed;
  }
}

.toggleButton {
  position: absolute;
  inset-inline-end: 8px;
  top: 50%;
  transform: translateY(-50%);
  @include interactive-button;
  padding: 6px;
  @include rounded-small;
  @include flex-center;
  min-width: 24px;
  min-height: 24px;
  @include smooth-transition;
  color: $text-muted;

  &:hover:not(:disabled) {
    background-color: $overlay-white-10;
    color: $text-secondary;
  }

  &:focus {
    outline: none;
    background-color: $overlay-primary-10;
    color: $primary;
  }

  &:active:not(:disabled) {
    background-color: $overlay-primary-20;
    color: $primary;
  }

  &:disabled {
    cursor: not-allowed;
    opacity: 0.5;
  }
}

.eyeIcon {
  width: 16px;
  height: 16px;
  @include smooth-transition;
}

@media (max-width: 480px) {
  .toggleButton {
    inset-inline-end: 6px;
    padding: 4px;
  }

  .passwordInput {
    padding-inline-end: 36px;
  }
}