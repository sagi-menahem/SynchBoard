@import '../../../../styles/_variables';
@import '../../../../styles/_mixins';

.universalToolbar {
  position: fixed;
  top: var(--banner-height, 0px);
  left: 0;
  right: 0;
  width: 100vw;
  height: 72px;
  box-sizing: border-box;
  background: linear-gradient(to bottom, $overlay-surface-60, $overlay-surface-80);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid $overlay-white-08;
  @include shadow-light;
  @include flex-between;
  padding: 0 24px;
  z-index: 50;
  user-select: none;
  overflow: visible;
}

.toolbarSection {
  @include flex-start;
  gap: 12px;
}

.leftSection {
  flex: 1 1 0;
  justify-content: flex-start;
  min-width: 0;
  overflow: visible;
}

.centerSection {
  flex: 0 0 auto;
  justify-content: center;
  min-width: 0;
}

.rightSection {
  flex: 1 1 0;
  justify-content: flex-end;
  min-width: min-content;
}

.toolbarTitle {
  color: $text-primary;
  font-size: 18px;
  font-weight: 500;
  margin: 0;
  padding: 0;
  @include text-ellipsis;
  max-width: 300px;
}

.toolbarButton {
  background: $overlay-white-02;
  border: 1px solid $overlay-white-06;
  color: $text-muted;
  @include interactive-button;
  padding: 4px 10px;
  @include rounded-medium;
  @include flex-start;
  gap: 8px;
  @include smooth-transition;
  font-size: 14px;
  font-weight: 500;
  text-decoration: none;
  white-space: nowrap;
  min-height: 28px;
  box-sizing: border-box;
}

.toolbarButton:hover:not(.disabled) {
  background: $overlay-white-08;
  border-color: $overlay-white-15;
  color: $text-primary;
  transform: translateY(-1px);
  @include shadow-light;
}

.toolbarButton.disabled {
  @include button-disabled;
  opacity: 0.3;
}

.toolbarButton.primary {
  background: linear-gradient(135deg, $overlay-primary-30, $overlay-primary-20);
  color: $text-primary;
  border-color: $overlay-primary-40;
  box-shadow: 0 0 8px $overlay-primary-10;
}

.toolbarButton.primary:hover:not(.disabled) {
  background: linear-gradient(135deg, $overlay-primary-40, $overlay-primary-30);
  border-color: $overlay-primary-60;
  box-shadow: 0 0 12px $overlay-primary-20;
}

.toolbarButton.destructive {
  background: linear-gradient(135deg, $overlay-danger-30, $overlay-danger-20);
  color: $text-primary;
  border-color: $overlay-danger-40;
  box-shadow: 0 0 8px $overlay-danger-10;
}

.toolbarButton.destructive:hover:not(.disabled) {
  background: linear-gradient(135deg, $overlay-danger-40, $overlay-danger-30);
  border-color: $overlay-danger-60;
  box-shadow: 0 0 12px $overlay-danger-20;
}

.toolbarButton.icon {
  padding: 8px;
  min-width: 36px;
  justify-content: center;
}

.toolbarButton.icon .buttonLabel {
  display: none;
}

.toolbarButton.iconOnlyButton {
  padding: 8px;
  min-width: 36px;
  min-height: 36px;
  @include flex-center;
  gap: 0;
}

.toolbarButton.iconOnlyButton .buttonLabel {
  display: none;
}

.buttonLabel {
  font-size: 14px;
  font-weight: 500;
}

.customItem {
  @include flex-start;
  gap: 8px;
}

.toolbarSection>*:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -8px;
  top: 50%;
  transform: translateY(-50%);
  height: 24px;
  width: 1px;
  background: linear-gradient(to bottom, transparent, $overlay-white-10, transparent);
  pointer-events: none;
}

.toolbarSection>*:last-child::after {
  display: none;
}

.toolbarSection>.customItem::after,
.toolbarSection>*:has(.searchInput)::after,
.toolbarSection>*:has(.viewToggle)::after {
  display: none;
}