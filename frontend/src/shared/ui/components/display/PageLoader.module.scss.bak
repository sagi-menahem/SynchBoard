@import '../../../../styles/_variables';
@import '../../../../styles/_mixins';

.pageLoader {
  @include flex-column-center;
  min-height: 200px;
  padding: 2rem;
}

.spinner {
  width: 40px;
  height: 40px;
  @include spinner-base;
  border: 3px solid $overlay-white-10;
  border-top: 3px solid $text-secondary;
  margin-bottom: 1rem;
}

.message {
  color: $text-secondary;
  font-size: 16px;
  margin: 0;
  text-align: center;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}