@import '../../../../styles/_variables';
@import '../../../../styles/_mixins';

.menu {
    position: absolute;
    z-index: 1000;
    @include card-base;
    @include shadow-heavy;
    padding: 6px;
    min-width: 180px;
}

.item {
    padding: 8px 12px;
    @include rounded-small;
    cursor: pointer;
    user-select: none;
    transition: background-color 0.1s ease-in-out;
    color: $text-primary;

    &:hover {
        background-color: $primary;
        color: $text-primary;
    }

    &.destructive {
        color: $error;

        &:hover {
            background-color: $error;
            color: $text-primary;
        }
    }
}

.separator {
    height: 1px;
    background-color: $border-primary;
    margin: 4px 0;
}
