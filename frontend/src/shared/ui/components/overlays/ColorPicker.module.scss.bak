@import '../../../../styles/_variables';
@import '../../../../styles/_mixins';

.colorPickerContainer {
  position: relative;
  @include flex-start;
}

.label {
  @include flex-start;
  margin-right: 8px;
  color: $text-muted;
  font-size: 11px;
  font-weight: 300;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  height: 28px;
}

.swatch {
  width: 28px;
  height: 28px;
  @include rounded-small;
  border: 1px solid $overlay-white-20;
  @include interactive-button;
  background-clip: border-box;
  @include smooth-transition;
  position: relative;
  overflow: hidden;
  @include shadow-light;

  &:hover:not(.disabled) {
    border-color: $overlay-primary-60;
    transform: translateY(-1px);
    @include shadow-medium;
  }

  &:focus {
    outline: none;
    border-color: $primary;
    box-shadow: 0 0 0 2px $overlay-primary-30;
  }

  &.disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
}

.swatchInner {
  width: 100%;
  height: 100%;
  @include rounded-small;
  background: inherit;
}

.popover {
  position: absolute;
  top: calc(100% + 8px);
  left: 0;
  z-index: 1000;
  @include card-base;
  @include shadow-heavy;
  animation: popoverIn 0.2s ease-out;
  padding: 12px;
}

@media (max-height: 500px) {
  .popover {
    top: 0;
    left: calc(100% + 8px);
  }
}

@keyframes popoverIn {
  from {
    opacity: 0;
    transform: translateY(-8px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.colorfulWrapper {
  @include flex-column;
  gap: 12px;
}

.colorfulWrapper :global(.react-colorful) {
  width: 200px;
  height: 150px;
}

.colorfulWrapper :global(.react-colorful__saturation) {
  @include rounded-small;
  border-radius: 4px 4px 0 0;
  border-bottom: none;
}

.colorfulWrapper :global(.react-colorful__hue) {
  height: 20px;
  border-radius: 0 0 4px 4px;
}

.colorfulWrapper :global(.react-colorful__pointer) {
  width: 16px;
  height: 16px;
  border: 2px solid $text-primary;
  @include shadow-light;
}

.presetColors {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 4px;
  margin-top: 8px;
}

.presetColor {
  width: 24px;
  height: 24px;
  border: 1px solid $border-primary;
  @include rounded-small;
  @include interactive-button;
  @include smooth-transition;

  &:hover {
    border-color: $primary;
    transform: scale(1.1);
    @include shadow-light;
  }

  &:focus {
    outline: none;
    border-color: $primary;
    box-shadow: 0 0 0 2px $overlay-primary-30;
  }
}