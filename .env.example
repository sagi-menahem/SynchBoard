# =====================================================
# SYNCHBOARD ENVIRONMENT CONFIGURATION
# =====================================================
# This file contains ALL configuration for both Docker and local development
# Copy to .env and customize as needed

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
POSTGRES_DB=synchboard_db
POSTGRES_USER=synchboard_user
POSTGRES_PASSWORD=synchboard_dev_password
POSTGRES_PORT=5432
JPA_DDL_AUTO=update

# =====================================================
# MESSAGE BROKER CONFIGURATION
# =====================================================
ACTIVEMQ_USER=admin
ACTIVEMQ_PASSWORD=admin
ACTIVEMQ_WEB_PORT=8161
ACTIVEMQ_TCP_PORT=61616
ACTIVEMQ_STOMP_PORT=61613

# =====================================================
# APPLICATION PORTS
# =====================================================
BACKEND_PORT=8080
FRONTEND_PORT=80

# =====================================================
# JWT SECURITY
# =====================================================
# WARNING: This is a default key for development only!
# Generate a secure key for production: openssl rand -base64 64
JWT_SECRET_KEY=a-default-non-secure-jwt-key-for-development-only-do-not-use-in-production
JWT_EXPIRATION_HOURS=24

# =====================================================
# CORS CONFIGURATION
# =====================================================
# For Docker deployment
CLIENT_ORIGIN_URL=http://localhost

# =====================================================
# FILE UPLOAD CONFIGURATION
# =====================================================
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE_MB=10
MAX_REQUEST_SIZE_MB=10

# =====================================================
# LOGGING CONFIGURATION
# =====================================================
LOG_FILE_PATH=logs/synchboard.log

# =====================================================
# WEBSOCKET CONFIGURATION
# =====================================================
WEBSOCKET_MESSAGE_SIZE_LIMIT=1048576
WEBSOCKET_BUFFER_SIZE_LIMIT=1048576

# =====================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =====================================================
# Leave empty to disable email features
# Get your API key from https://sendgrid.com
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
SENDGRID_FROM_NAME=SynchBoard
VERIFICATION_EXPIRY_MINUTES=15
PASSWORD_RESET_EXPIRY_MINUTES=60

# =====================================================
# OAUTH2 CONFIGURATION (OPTIONAL)
# =====================================================
# Leave empty to disable Google login
# Get from Google Cloud Console: https://console.cloud.google.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =====================================================
# PGADMIN CONFIGURATION (OPTIONAL)
# =====================================================
PGADMIN_EMAIL=admin@synchboard.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
