# =====================================================
# BACKEND LOCAL DEVELOPMENT CONFIGURATION
# =====================================================
# Copy this file to .env for local development
# This configuration assumes you're running PostgreSQL and ActiveMQ locally
# or via Docker containers with port forwarding

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# Local PostgreSQL connection
DB_URL=jdbc:postgresql://localhost:5432/synchboard_db
DB_USERNAME=synchboard_user
DB_PASSWORD=test12345
JPA_DDL_AUTO=update

# =====================================================
# ACTIVEMQ CONFIGURATION
# =====================================================
# Local ActiveMQ connection
STOMP_BROKER_HOST=localhost
STOMP_BROKER_PORT=61613
ACTIVEMQ_BROKER_URL=tcp://localhost:61616?wireFormat.maxInactivityDuration=0
ACTIVEMQ_USER=admin
ACTIVEMQ_PASSWORD=admin

# =====================================================
# JWT SECURITY
# =====================================================
# WARNING: This is a default key for development only!
JWT_SECRET_KEY=***REDACTED_DEV_JWT_KEY***
JWT_EXPIRATION_HOURS=24

# =====================================================
# CORS CONFIGURATION
# =====================================================
# Local frontend development server
CLIENT_ORIGIN_URL=http://localhost:5173

# =====================================================
# FILE UPLOAD CONFIGURATION
# =====================================================
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE_MB=10
MAX_REQUEST_SIZE_MB=10

# =====================================================
# LOGGING CONFIGURATION
# =====================================================
LOG_FILE_PATH=logs/synchboard.log

# =====================================================
# WEBSOCKET CONFIGURATION
# =====================================================
WEBSOCKET_MESSAGE_SIZE_LIMIT=1048576
WEBSOCKET_BUFFER_SIZE_LIMIT=1048576

# =====================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =====================================================
# Leave empty to disable email features
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
SENDGRID_FROM_NAME=SynchBoard
VERIFICATION_EXPIRY_MINUTES=15
PASSWORD_RESET_EXPIRY_MINUTES=60

# =====================================================
# OAUTH2 CONFIGURATION (OPTIONAL)
# =====================================================
# Leave empty to disable Google login
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth2 Redirect Configuration for Development
GOOGLE_REDIRECT_URI=http://localhost:8080/login/oauth2/code/google
OAUTH2_FRONTEND_BASE_URL=http://localhost:5173

# =====================================================
# PGADMIN CONFIGURATION (OPTIONAL)
# =====================================================
PGADMIN_EMAIL=admin@synchboard.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050